<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proyecto W2</title>
    <link rel="shortcut icon" href="favicon.jpg" type="image/x-icon">
    <link rel="stylesheet" href="estilos.css">
</head>
<body>
    <header>
        <h1>Listar Usuarios</h1>
    </header>
    
    <main>
        <section>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- JS -->
                    <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td>
                            <a href="/edit/<%= user.id %>" class="edit">Editar 📝</a>
                            <a href="/delete/<%= user.id %>" class="delete">Eliminar 🗑️</a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <div>
                <a href="/agregar-usuario" class="agregar">Agregar➕</a>
            </div>
            
        </section>

        <hr>

    </main>
</body>
</html>
