<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Configuraciones b√°sicas de la p√°gina -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proyecto W2</title>
    <!-- Favicon e integraci√≥n de CSS -->
    <link rel="shortcut icon" href="favicon.jpg" type="image/x-icon">
    <link rel="stylesheet" href="estilos.css">
</head>
<body>
    <header>
        <h1>Listar Usuarios</h1>
    </header>
    <main>
        <section>
            <table> <!-- Tabla de usuarios -->
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Bloque EJS para iterar usuarios -->
                    <% users.forEach(user => { %>
                    <tr>  <!-- Mostrar datos de cada usuario -->
                        <td><%= user.id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td> <!-- Links de Editar y Eliminar -->
                            <a href="/edit/<%= user.id %>" class="edit">Editar üìù</a>
                            <a href="/delete/<%= user.id %>" class="delete">Eliminar üóëÔ∏è</a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <div> <!-- Bot√≥n para agregar nuevo usuario -->
                <a href="/agregar-usuario" class="agregar">Agregar‚ûï</a>
            </div>
            
        </section>

        <hr>

    </main>
</body>
</html>
